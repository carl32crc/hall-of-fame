{
  "parserOptions": {
    "ecmaVersion": 2021
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "parser": "babel-eslint",
  "rules": {
    "no-console": "warn",
    "no-use-before-define": "warn",
    "spaced-comment": "warn",
    "no-unused-expressions": [
      "off"
    ],
    "space-before-function-paren": [
      "error",
      "never"
    ]
  },
  "extends": [
    "standard",
    "plugin:react/recommended"
  ]
}